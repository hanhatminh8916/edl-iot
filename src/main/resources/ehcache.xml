<config
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://www.ehcache.org/v3'
    xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <!-- Default cache template -->
    <cache-template name="default">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
        </resources>
    </cache-template>

    <!-- Employee cache - Rarely changes -->
    <cache alias="com.hatrustsoft.bfe_foraiot.entity.Employee" uses-template="default">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
        </resources>
    </cache>

    <!-- Helmet cache - Moderate changes -->
    <cache alias="com.hatrustsoft.bfe_foraiot.model.Helmet" uses-template="default">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
        </resources>
    </cache>

    <!-- Alert cache - Frequent changes -->
    <cache alias="com.hatrustsoft.bfe_foraiot.model.Alert" uses-template="default">
        <expiry>
            <ttl unit="minutes">5</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
        </resources>
    </cache>

    <!-- Query cache -->
    <cache alias="default-query-results-region" uses-template="default">
        <expiry>
            <ttl unit="minutes">5</ttl>
        </expiry>
    </cache>
    
    <!-- Tag Position Caches - Very short TTL for real-time data -->
    <cache alias="tagPositionByMac" uses-template="default">
        <expiry>
            <ttl unit="seconds">5</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100</heap>
        </resources>
    </cache>
    
    <cache alias="tagPositionsOnline" uses-template="default">
        <expiry>
            <ttl unit="seconds">5</ttl>
        </expiry>
        <resources>
            <heap unit="entries">50</heap>
        </resources>
    </cache>
    
    <cache alias="tagPositionsOffline" uses-template="default">
        <expiry>
            <ttl unit="seconds">10</ttl>
        </expiry>
        <resources>
            <heap unit="entries">50</heap>
        </resources>
    </cache>
    
    <cache alias="allTagPositions" uses-template="default">
        <expiry>
            <ttl unit="seconds">5</ttl>
        </expiry>
        <resources>
            <heap unit="entries">50</heap>
        </resources>
    </cache>

    <!-- Update timestamps cache -->
    <cache alias="default-update-timestamps-region">
        <expiry>
            <none/>
        </expiry>
        <resources>
            <heap unit="entries">5000</heap>
        </resources>
    </cache>

</config>
